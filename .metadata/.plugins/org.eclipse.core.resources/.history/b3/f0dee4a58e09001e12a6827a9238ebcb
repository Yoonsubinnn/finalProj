 <script>
        // 토글 기능을 위한 JavaScript 코드
        // 모든 toggle-row 클래스를 가진 요소에 클릭 이벤트 리스너를 추가
        var toggleRows = document.querySelectorAll('.toggle-row');
        toggleRows.forEach(function(row) {
            row.addEventListener('click', function() {
                // 클릭한 행의 다음 요소를 가져옴 (펼치거나 접을 내용)
                var content = row.nextElementSibling;

                // 숨겨져 있을 경우 펼치고, 보이고 있을 경우 접음
                if (content.classList.contains('hidden')) {
                    content.classList.remove('hidden');
                } else {
                    content.classList.add('hidden');
                }
            });
        });
    </script>
